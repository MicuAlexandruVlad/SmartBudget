<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollviewParent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.micua.smartbudget.Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Household"
            android:textColor="@color/text"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv01"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_register_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:text="Register to Sync"
                    android:textColor="@color/textGray"
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Access your budget anywhere."
                    android:textColor="@color/textFade"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text" />

            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:text="Log In"
                    android:textColor="@color/textGray"
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Log into an existing Household."
                    android:textColor="@color/textFade"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Device"
            android:textColor="@color/text"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv02"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:text="Quick Transactions"
                    android:textColor="@color/textGray"
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Edit and delete transactions for widget"
                    android:textColor="@color/textFade"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_device_nickname"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:text="Device Nickname"
                    android:textColor="@color/textGray"
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Set nickname to identify this device"
                    android:textColor="@color/textFade"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rl_settings_use_current_location"
                android:paddingBottom="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/cb_settings_location"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:text="Use Current Location"
                        android:textColor="@color/textGray"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Use location to prefill nearby stores"
                        android:textColor="@color/textFade"
                        android:textSize="12sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <CheckBox
                    android:id="@+id/cb_settings_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_theme"
                android:orientation="horizontal"
                android:paddingBottom="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/cb_settings_theme"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:text="Theme"
                        android:textColor="@color/textGray"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Use Dark Theme"
                        android:textColor="@color/textFade"
                        android:textSize="12sp"
                        android:textStyle="normal" />


                </LinearLayout>

                <CheckBox
                    android:id="@+id/cb_settings_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Localization"
            android:textColor="@color/text"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_settings_date_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv03"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Date Order"
                android:textColor="@color/textGray"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Display month or day first"
                android:textColor="@color/textFade"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/sep4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_settings_date_order"
            android:background="@color/text" />

        <LinearLayout
            android:id="@+id/ll_settings_decimal_digits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sep4"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Decimal Digits"
                android:textColor="@color/textGray"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Set number of decimal digits to show"
                android:textColor="@color/textFade"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/sep5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_settings_decimal_digits"
            android:background="@color/text" />

        <LinearLayout
            android:id="@+id/ll_settings_decimal_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sep5"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Decimal Mark"
                android:textColor="@color/textGray"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Set decimal mark"
                android:textColor="@color/textFade"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced"
            android:textSize="17sp"
            android:id="@+id/tv04"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_below="@id/ll_settings_decimal_mark"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            />

        <LinearLayout
            android:id="@+id/ll_settings_clear_default_payees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv04"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Clear Default Payees"

                android:textColor="@color/textGray"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Set decimal mark"
                android:textColor="@color/textFade"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/sep7"
            android:layout_below="@id/ll_settings_clear_default_payees"
            android:background="@color/text" />

        <LinearLayout
            android:id="@+id/ll_settings_refill_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sep7"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Refill Notifications"
                android:textColor="@color/textGray"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Set decimal mark"
                android:textColor="@color/textFade"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="17sp"
            android:id="@+id/tv05"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_below="@id/ll_settings_refill_notifications"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            />

        <LinearLayout
            android:id="@+id/ll_settings_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv05"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Terms &amp; Conditions"
                android:textColor="@color/textGray"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Please budget responsibly"
                android:textColor="@color/textFade"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/sep9"
            android:layout_below="@id/ll_settings_terms"
            android:background="@color/text" />

        <LinearLayout
            android:id="@+id/ll_settings_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sep9"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Privacy Policy"
                android:textColor="@color/textGray"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Your data is safe with us"
                android:textColor="@color/textFade"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/sep10"
            android:layout_below="@id/ll_settings_privacy_policy"
            android:background="@color/text" />

        <LinearLayout
            android:id="@+id/ll_settings_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sep10"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="About Smart Budget"
                android:textColor="@color/textGray"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Come say hi"
                android:textColor="@color/textFade"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/sep11"
            android:layout_below="@id/ll_settings_about"
            android:background="@color/text" />

        <LinearLayout
            android:id="@+id/ll_settings_tell_a_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sep11"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Tell a Friend"
                android:textColor="@color/textGray"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Share the budgeting love"
                android:textColor="@color/textFade"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/sep12"
            android:layout_below="@id/ll_settings_tell_a_friend"
            android:background="@color/text" />

        <LinearLayout
            android:id="@+id/ll_settings_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sep12"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Version"
                android:textColor="@color/textGray"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0.2"
                android:textColor="@color/textFade"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>
